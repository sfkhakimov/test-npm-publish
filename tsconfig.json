{
    "extends": "@tsconfig/recommended/tsconfig.json",
    "compilerOptions": {
        "isolatedModules": true,
        "outDir": "./dist",
        "baseUrl": "src",
        "composite": true,
        "declaration": true,
        "jsx": "react",
        "paths": {
            "components/*": ["common/*"],
            "constants/*": ["modules/lk/*"],
            "hooks/*": ["modules/store/*"],
            "providers/*": ["modules/lk-operator/*"],
            "utils/*": ["modules/info-center/*"],
        }
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "lib"]
}
